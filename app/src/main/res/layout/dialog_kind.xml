<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#80000000"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="10"
        android:gravity="left">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:background="#ADD8E6"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="업종 검색"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="#000000"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|right">

            <CheckBox
                android:id="@+id/totalKindChk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="전체"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:gravity="center">
                <CheckBox
                    android:id="@+id/chkbox1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="#카페"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_weight="0.9"
                    android:background="#B5BFD4"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
                <CheckBox
                    android:id="@+id/chkbox2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="#스터디룸"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_weight="0.9"
                    android:background="#B5BFD4"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
                <CheckBox
                    android:id="@+id/chkbox3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="#세미나실"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_weight="0.9"
                    android:background="#B5BFD4"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="3"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/chkbox4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="#연습실"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_weight="0.9"
                    android:background="#B5BFD4"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
                <CheckBox
                    android:id="@+id/chkbox5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="#다목적실"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_weight="0.9"
                    android:background="#B5BFD4"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
                <CheckBox
                    android:id="@+id/chkbox6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="#회의실"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_weight="0.9"
                    android:background="#B5BFD4"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <Button
                android:id="@+id/sendKind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택된 조건으로 검색"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>